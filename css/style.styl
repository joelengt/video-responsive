*
	margin 0
	padding 0
html
	font-family Arial,sans-serif
body
	background lightgray
h2
	padding-left .8em
	text-transform uppercase
	padding-top .5em
.header__main
	background purple
	text-align center
	padding 1em
	h1
		color white
.col1
	background yellow
.col2
	background gray
.col1,col2
	width 100%
.video-content
	height 0
	padding-bottom 56.25%
	position relative
	overflow hidden
iframe,
object,
embed,
video
	width 100%
	height 100%
	position absolute
	right 0
	left 0
p
	padding 15px
footer
	background orange
	text-align center
	padding 1em
@media (min-width 1000px)
	.myapp
		max-width 1000px
		margin 0 auto
	.col1
	.col2
		float left
	.col1
		width 70%
	.col2
		width 30%
		